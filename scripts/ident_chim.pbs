#!/bin/bash --login
#PBS -l walltime=01:00:00
#PBS -l select=1:ncpus=2
#PBS -N identify_chimeras
#PBS -A d411-training

cd $PBS_O_WORKDIR
module load miniconda/python2
export TMPDIR=~/qiime_tmp
source activate qiime1

/usr/bin/time -f %e \
parallel_identify_chimeric_seqs.py \
-i ~/18/ \
-o ~/18/chimeras.txt \
-a ~/silva_db/rep_set_aligned/97/97_alignment.fna \
-m ChimeraSlayer

source deactivate
