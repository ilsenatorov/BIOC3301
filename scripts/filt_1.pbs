#!/bin/bash --login
#PBS -l walltime=01:00:00
#PBS -l select=1:ncpus=2
#PBS -N filter_1
#PBS -A d411-training

cd $PBS_O_WORKDIR
module load miniconda/python2
export TMPDIR=~/qiime_tmp
source activate qiime1

/usr/bin/time -f %e filter_otus_from_otu_table.py \
-i ~/18/closed_otus/otu_table.biom \
-o ~/18/closed_otus/filtered_otu_table.biom \
-s 7

source deactivate
